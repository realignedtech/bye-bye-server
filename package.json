{
  "name": "bye-bye-server",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:frontend": "vite",
    "dev:backend": "cd backend-go && go run .",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" --names \"frontend,backend\" --prefix-colors \"cyan,green\"",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "cd backend-go && go build -o server",
    "preview": "vite preview",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "svelte": "^5.38.0",
    "terser": "^5.44.1",
    "vite": "^7.1.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "lucide-svelte": "^0.539.0"
  }
}
